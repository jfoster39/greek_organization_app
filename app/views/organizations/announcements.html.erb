<div class="row">
  <div class="col-xs-12">
    <h1 class="page-title txt-color-blueDark">
      <i class="fa fa-fw fa-bullhorn"></i>
      Announcements
      <!--- create button div -->
      <% if current_user.is_admin? %>
        <%= link_to "Create Announcement", new_announcement_path, 
          {:style=> 'float:right', 
           :class=>'btn btn-success'} 
         %>
     <% end %>
   </h1>
 </div>
</div>

<% if notice%>
  <p class="alert alert-info"><%= notice %></p>
<% elsif alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
    <h2>Announcements</h2>
  </header>

  <div>
    <div class="widget-body no-padding">
      <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
          <tr>
            <th>Date</th>
            <th data-class="expand">Title</th>
            <th>Body</th>
            <th data-hide="phone,tablet">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @announcements.each do |announcement| %>
            <tr>
              <td><%= announcement.created_at.strftime("%m/%d/%Y")%></td>
              <td><%= announcement.title %></td>
              <td><%= truncate(announcement.plaintext_body, length: 50)%></td>
              <td>
                <%= link_to "View", announcement_path(announcement), :class => "btn btn-info" %>
                <% if current_user.is_admin? %>
                  <%= link_to "Edit", edit_announcement_path(announcement), :class => "btn btn-warning" %>
                  <%= link_to "Delete", destroy_announcement_path(announcement), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

