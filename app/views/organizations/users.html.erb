<div class="row">
  <div class="col-xs-12">
    <h1 class="page-title txt-color-blueDark">
      <i class="fa fa-fw fa-group"></i>
      Users
   </h1>
 </div>
</div>

<% if current_user.organization.has_pending_members? %>
  <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-table"></i> </span>
      <h2>Pending Users</h2>
    </header>

    <div>
      <div class="widget-body no-padding">
        <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
          <thead>
            <tr>
              <th>Date Joined</th>
              <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Name</th>
              <th>Email Address</th>
              <th><i class="fa fa-fw fa-phone text-muted hidden-md hidden-sm hidden-xs"></i> Phone</th>
              <% if current_user.is_admin? %>
                <th data-hide="phone,tablet">Actions</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @pending_users.each do |user| %>
              <tr>
                <td><%= user.created_at.strftime("%m/%d/%Y")%></td>
                <td><%= user.first_name.to_s + ' ' + user.last_name.to_s %></td>
                <td><%= user.email %></td>
                <td><%= user.phone_number %></td>
                <% if current_user.is_admin? %>
                  <td>
                    <%= link_to "Accept", approve_user_path(user), :class => "btn btn-success" %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
  <header>
    <span class="widget-icon"> <i class="fa fa-table"></i> </span>
    <h2>Users</h2>
  </header>

  <div>
    <div class="widget-body no-padding">
      <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
          <tr>
            <th>Date Joined</th>
            <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> Name</th>
            <th>Email Address</th>
            <th><i class="fa fa-fw fa-phone text-muted hidden-md hidden-sm hidden-xs"></i> Phone</th>
            <% if current_user.is_admin? %>
              <th data-hide="phone,tablet">Actions</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.created_at.strftime("%m/%d/%Y")%></td>
              <td><%= user.first_name.to_s + ' ' + user.last_name.to_s %></td>
              <td><%= user.email %></td>
              <td><%= user.phone_number %></td>
              <% if current_user.is_admin? %>
                <td>
                  <%= link_to "Edit", edit_user_path(user), :class => "btn btn-warning" %>
                  <%= link_to "Delete", destroy_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

