<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
    <div class="well no-padding">
    <%= form_for(@join_organization_form, url: "/users_organization", method: :patch, html: {class: "smart-form client-form"}) do |f| %>

        <header>Select an Organization</header>

        <% if !@join_organization_form.errors.empty? %>
          <p class="alert alert-danger">
            <% @join_organization_form.errors.full_messages.each do |message| %>
              <%= message %><br />
            <% end %>
          </p>
        <% end %>

        <fieldset>

          <section>
          <label class="label"><%= f.label :id %></label>
          <label class="select"><%= f.select :id, @organizations.collect {|o| [o.name, o.id]}, {include_blank: "Select an organization"}, html: {class: "input"} %><i></i></label>
          </section>

        </fieldset>

        <footer>
        <div><%= f.submit "Join", class: "btn btn-primary" %></div>
        </footer>
      <% end %>
    </div>
  </div>
</div>

  <p>or</p>

  <div class="row">
  <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
    <div class="well no-padding">
      <%= form_for(@create_organization_form, url: "/organizations", html: {class: "smart-form client-form"}) do |f| %>

        <header>Create Organization</header>

        <fieldset>

          <section>
          <label class="label"><%= f.label :name %></label>
          <label class="input"><%= f.text_field :name %><i></i></label>
          </section>

          <section>
          <label class="label"><%= f.label :financial_provider_name%></label>
          <label class="input"><%= f.text_field :financial_provider_name%><i></i></label>
          </section>

          <section>
          <label class="label"><%= f.label :financial_provider_url%></label>
          <label class="input"><%= f.text_field :financial_provider_url%><i></i></label>
          </section>

        </fieldset>

        <footer>
        <div><%= f.submit "Create", class: "btn btn-primary" %></div>
        </footer>
      <% end %>
    </div>
  </div>
</div>
